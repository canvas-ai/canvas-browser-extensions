{
  "manifest_version": 3,
  "name": "Canvas Browser Sync",
  "description": "Tab sync browser extension for Canvas",
  "version": "1.0.0",
  "icons": {
    "64": "popup/icons/logo_64x64.png",
    "128": "popup/icons/logo_128x128.png"
  },
  "action": {
    "default_title": "Canvas Browser Sync",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "64": "popup/icons/logo_64x64.png",
      "128": "popup/icons/logo_128x128.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",

    "nativeMessaging",
    "notifications",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": [
        "<all_urls>"
      ]
    }
  ],

  "homepage_url": "https://getcanvas.org",
  "browser_specific_settings": {
    "gecko": {
      "id": "canvas-ui-firefox@getcanvas.org",
      "strict_min_version": "50.0"
    }
  }
}
{
  "manifest_version": 3,
  "name": "Canvas Browser Extension",
  "version": "2.0.5",
  "description": "Seamlessly sync browser tabs with Canvas server contexts",

  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://10.0.0.0/*",
    "http://10.*/*",
    "http://172.16.*/*",
    "http://172.17.*/*",
    "http://172.18.*/*",
    "http://172.19.*/*",
    "http://172.20.*/*",
    "http://172.21.*/*",
    "http://172.22.*/*",
    "http://172.23.*/*",
    "http://172.24.*/*",
    "http://172.25.*/*",
    "http://172.26.*/*",
    "http://172.27.*/*",
    "http://172.28.*/*",
    "http://172.29.*/*",
    "http://172.30.*/*",
    "http://172.31.*/*",
    "http://192.168.*/*",
    "https://*/*",
    "https://my.cnvs.ai/*",
    "https://canvas.idnc.sk/*"
  ],

  "background": {
    "scripts": ["service-worker.js"]
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Canvas Browser Extension",
    "default_icon": {
      "16": "assets/icons/logo-br_64x64.png",
      "32": "assets/icons/logo-br_64x64.png",
      "48": "assets/icons/logo-br_64x64.png",
      "64": "assets/icons/logo-br_64x64.png",
      "128": "assets/icons/logo-br_128x128.png"
    }
  },

  "icons": {
    "16": "assets/icons/logo-br_64x64.png",
    "32": "assets/icons/logo-br_64x64.png",
    "48": "assets/icons/logo-br_64x64.png",
    "64": "assets/icons/logo-br_64x64.png",
    "128": "assets/icons/logo-br_128x128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:* http://10.0.0.0:* http://10.*:* http://172.16.*:* http://172.17.*:* http://172.18.*:* http://172.19.*:* http://172.20.*:* http://172.21.*:* http://172.22.*:* http://172.23.*:* http://172.24.*:* http://172.25.*:* http://172.26.*:* http://172.27.*:* http://172.28.*:* http://172.29.*:* http://172.30.*:* http://172.31.*:* http://192.168.*:* https: ws://localhost:* ws://127.0.0.1:* ws://10.0.0.0:* ws://10.*:* ws://172.16.*:* ws://172.17.*:* ws://172.18.*:* ws://172.19.*:* ws://172.20.*:* ws://172.21.*:* ws://172.22.*:* ws://172.23.*:* ws://172.24.*:* ws://172.25.*:* ws://172.26.*:* ws://172.27.*:* ws://172.28.*:* ws://172.29.*:* ws://172.30.*:* ws://172.31.*:* ws://192.168.*:* wss:; style-src 'self' 'unsafe-inline';"
  },

  "web_accessible_resources": [
    {
      "resources": ["settings/settings.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "canvas-browser-extension@getcanvas.org",
      "strict_min_version": "109.0"
    }
  }
}
